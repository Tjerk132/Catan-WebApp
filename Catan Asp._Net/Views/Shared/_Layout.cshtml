<!DOCTYPE html>
<html>
<head>
    <script type="text/javascript" src="~/Scripts/html2canvas.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Map Generator</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/MediaQueries.css" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Lusitana:700" rel="stylesheet">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body id="container">
    <ul class="unselectable">
        <div class="title">
            <p style="font-size:55px; font-family: 'Lusitana', serif;">CATAN</p><br>
            <hr>
            <p style="font-size: 28px; font-family: 'Karla', sans-serif;">MAP GENERATOR</p>

        </div>

        <div class="option-menu">
            <p>Options</p>
            <form>
                <input onClick="window.location.reload()" value="Generate" type="submit">
            </form>
            <form>
                <input onClick="screenshot();" value="Save" type="button">
            </form>
            <form>
                <input onClick="window.location.reload()" value="Load" type="submit">
            </form>
        </div>
        <div class="footer">
            <p>Made by proftaak groep 3</p>
            <p>&copy;Alle rechten voorbehouden.</p>
        </div>
    </ul>
    <!-- Script -->
    <script type='text/javascript'>
        function screenshot() {
            html2canvas(document.getElementById('container')).then(function (canvas) {
                document.body.appendChild(canvas);
            });
        }
    </script>
    <div class="container body-content">
        @RenderBody()
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>